extends layouts/main

block content
    .loginBox
        form#jsLogin
            input(placeholder="What's your nickname", type="text" name="name" required)
            input(placeholder="email", type="email" name="eamil" required)
            input(placeholder="Password" type="password" name="password" required)
            input(placeholder="Verify password" type="password" name="password2" required)
            input(type="submit")
        .join__link
            a(href="/join") Join
    .gameContainer#jsGame
        .canvas__container
            #jsNotifs
            canvas.canvas#jsCanvas
            .controls
                .controls__btns
                    button#jsMode Fill
                    .controls__range.controls__range--paint
                        input(type="range", min="0.1", max="5", value="2.5", step="0.1")#jsRangeFill
                    button#jsEraser Eraser
                    .controls__range.controls__range--eraser
                        input(type="range", min="0.1", max="20", value="10", step="1")#jsRangeEraser
                .controls__colors.jsColors
                    .controls__color.jsColor(style="background-color:rgb(0, 0, 0)")
                    .controls__color.jsColor(style="background-color:rgb(255,255,255)")
                    .controls__color.jsColor(style="background-color:rgb(255,59,48)")
                    .controls__color.jsColor(style="background-color:rgb(255,149,0)")
                    .controls__color.jsColor(style="background-color:rgb(255,204,0)")
                    .controls__color.jsColor(style="background-color:rgb(76,217,100)")
                    .controls__color.jsColor(style="background-color:rgb(90,200,250)")
                    .controls__color.jsColor(style="background-color:rgb(0,122,255)")
                    .controls__color.jsColor(style="background-color:rgb(88,86,214)")
        .chat
            .player__board#jsPBoard
            ul.chat__messages#jsMessages
            form.chat__form#jsSendMsg
                input(placeholder="Write a message", type="text")
    script.
        window.events = !{events}
    script(src="/socket.io/socket.io.js")
    script(src="/js/main.js")